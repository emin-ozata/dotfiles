{
  // ===== APPEARANCE & THEMES =====
  "theme": {
    "mode": "dark",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "icon_theme": "Material Icon Theme",
  // ===== FONTS & TYPOGRAPHY =====
  "buffer_font_family": "TX-02",
  "buffer_font_size": 18,
  "buffer_font_weight": 400,
  "buffer_line_height": {
    "custom": 1.8
  },
  "ui_font_family": "TX-02",
  "ui_font_size": 18,
  "ui_font_weight": 200,
  // ===== EDITOR BEHAVIOR =====
  "base_keymap": "VSCode",
  "vim_mode": false,
  "autosave": "off",
  "format_on_save": "on",
  "formatter": "language_server",
  "soft_wrap": "editor_width",
  "hard_tabs": false,
  "git_panel": {
    "button": false
  },
  // ===== CURSOR & SELECTION =====
  "cursor_blink": false,
  "cursor_shape": "bar",
  "hide_mouse": "on_typing",
  "current_line_highlight": "all",
  "selection_highlight": true,
  // ===== LAYOUT & POSITIONING =====
  "centered_layout": {
    "left_padding": 0.05,
    "right_padding": 0.05
  },
  "bottom_dock_layout": "left_aligned",
  // ===== EDITOR VISUAL ELEMENTS =====
  "gutter": {
    "line_numbers": true,
    "runnables": false,
    "folds": true
  },
  "indent_guides": {
    "enabled": false
  },
  "inlay_hints": {
    "enabled": false
  },
  "line_indicator_format": "short",
  "inline_code_actions": false,
  // ===== SCROLLBARS =====
  "scrollbar": {
    "show": "never",
    "axes": {
      "horizontal": false,
      "vertical": false
    }
  },
  // ===== TABS & TAB BAR =====
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "history",
    "show_close_button": "hover"
  },
  "tab_bar": {
    "show": false
  },
  "preview_tabs": {
    "enabled": false
  },
  // ===== PANELS & UI ELEMENTS =====
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "project_panel": {
    "button": false,
    "default_width": 240,
    "dock": "right",
    "entry_spacing": "comfortable",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 16,
    "auto_reveal_entries": true,
    "auto_fold_dirs": false,
    "scrollbar": {
      "show": "never"
    },
    "indent_guides": {
      "show": "never"
    }
  },
  "outline_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": "never"
  },
  "notification_panel": {
    "button": false
  },
  "terminal": {
    "button": false
  },
  "debugger": {
    "button": false
  },
  // ===== PANE & WINDOW MANAGEMENT =====
  "active_pane_modifiers": {
    "border_size": 0.0,
    "inactive_opacity": 0.9
  },
  // ===== GIT INTEGRATION =====
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": false
    }
  },
  // ===== DIAGNOSTICS & TELEMETRY =====
  "diagnostics": {
    "include_warnings": false
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  // ===== FEATURES & AI =====
  "features": {
    "edit_prediction_provider": "none"
  },
  "agent": {
    "enabled": false
  },
  // ===== FILE HANDLING =====
  "file_scan_exclusions": [
    ".ruff_cache",
    ".idea",
    ".ropeproject",
    "**.git",
    "__pycache__",
    "**.zed",
    "**.DS_Store",
    "**mypy_cache",
    "**/.svn",
    "**/.hg",
    "**/Thumbs.db"
  ],
  "file_types": {
    "Helm": [
      "**/templates/*.yaml",
      "**/templates/*.yml"
    ]
  },
  // ===== LANGUAGE-SPECIFIC SETTINGS =====
  "languages": {
    "Python": {
      "language_servers": [
        "ruff",
        "pyright"
      ],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  // ===== LANGUAGE SERVER PROTOCOL (LSP) =====
  "lsp": {
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "keyOrdering": false,
          "format": {
            "singleQuote": false
          },
          "schemas": {}
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          "lint": {
            "extendSelect": [
              "I"
            ]
          }
        }
      }
    },
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "off",
          "reportMissingImports": "warning"
        }
      }
    }
  }
}
